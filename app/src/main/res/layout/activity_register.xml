<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF4F8"> <!-- רקע ורוד בהיר מאוד -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- תמונת פרופיל -->
        <ImageView
            android:id="@+id/imageview_profile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher_round"
            android:scaleType="centerCrop"
            android:layout_marginBottom="12dp"
            android:background="#FFE6EB"
            android:padding="8dp"
            android:layout_gravity="center"
            android:clipToOutline="true" />

        <!-- כפתור לבחירת תמונה -->
        <Button
            android:id="@+id/button_choose_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Image"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FFB6C1"
            android:layout_marginBottom="16dp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="10dp"
            android:elevation="2dp" />

        <!-- שדות טקסט -->
        <EditText
            android:id="@+id/edittext_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:backgroundTint="#FFD6E0"
            android:textColor="#FF6F91"
            android:textColorHint="#FFB6C1"
            android:layout_marginBottom="8dp"
            android:padding="10dp"
            android:background="#FFFFFFFF" />

        <EditText
            android:id="@+id/edittext_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:backgroundTint="#FFD6E0"
            android:textColor="#FF6F91"
            android:textColorHint="#FFB6C1"
            android:layout_marginBottom="8dp"
            android:padding="10dp"
            android:background="#FFFFFFFF" />

        <EditText
            android:id="@+id/edittext_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:backgroundTint="#FFD6E0"
            android:textColor="#FF6F91"
            android:textColorHint="#FFB6C1"
            android:layout_marginBottom="8dp"
            android:padding="10dp"
            android:background="#FFFFFFFF" />

        <EditText
            android:id="@+id/edittext_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:backgroundTint="#FFD6E0"
            android:textColor="#FF6F91"
            android:textColorHint="#FFB6C1"
            android:layout_marginBottom="8dp"
            android:padding="10dp"
            android:background="#FFFFFFFF" />

        <!-- תיבת סימון -->
        <CheckBox
            android:id="@+id/checkbox_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allow Notifications"
            android:textColor="#FF8FAB"
            android:buttonTint="#FFB6C1"
            android:layout_marginBottom="20dp" />

        <!-- כפתור הרשמה -->
        <Button
            android:id="@+id/button_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FFAEC9"
            android:paddingVertical="12dp"
            android:elevation="3dp" />

    </LinearLayout>
</ScrollView>
